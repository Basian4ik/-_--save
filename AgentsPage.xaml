<Page x:Class="Баязитов_глазки_save.AgentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Баязитов_глазки_save"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Агенты" FontFamily="Century Gothic">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для поиска -->
            <RowDefinition Height="Auto"/>
            <!-- Для фильтрации и сортировки -->
            <RowDefinition Height="*"/>
            <!-- Для списка агентов -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- СТРОКА 1: Поиск -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
            <TextBox x:Name="SearchTextBox" Width="300" Height="30" 
                     TextChanged="SearchTextBox_TextChanged"
                     ToolTip="Введите название, email или телефон агента"/>
        </StackPanel>

        <!-- СТРОКА 2: Фильтрация и сортировка -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Фильтрация по типу агента -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="Фильтр:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
                <ComboBox x:Name="FilterComboBox" Width="200" Height="30" 
                          SelectionChanged="FilterComboBox_SelectionChanged"
                          DisplayMemberPath="Title"/>
            </StackPanel>

            <!-- Сортировка -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="Сортировка:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
                <ComboBox x:Name="SortComboBox" Width="250" Height="30" 
                          SelectionChanged="SortComboBox_SelectionChanged">
                    <ComboBoxItem Tag="NameAsc">Наименование (А-Я)</ComboBoxItem>
                    <ComboBoxItem Tag="NameDesc">Наименование (Я-А)</ComboBoxItem>
                    <ComboBoxItem Tag="DiscountAsc">Скидка (по возрастанию)</ComboBoxItem>
                    <ComboBoxItem Tag="DiscountDesc">Скидка (по убыванию)</ComboBoxItem>
                    <ComboBoxItem Tag="PriorityAsc">Приоритет (по возрастанию)</ComboBoxItem>
                    <ComboBoxItem Tag="PriorityDesc">Приоритет (по убыванию)</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Grid>




        <ListView Grid.Row="2" Name="AgentListView"  >
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Редактировать" Click="MenuItem_Click"></MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{Binding FonStyle}">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Background" Value="{Binding FonStyle}"/>
                            </Style>
                        </Grid.Style>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition Width="850"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Image Width="130" Height="130" Grid.Column="0" Grid.RowSpan="4" Stretch="Uniform"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5">
                            <Image.Source>
                                <Binding Path="AgentPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /Res/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="{Binding AgentTypeName}" FontSize="20" ></TextBlock>
                            <TextBlock Text="{Binding Title, StringFormat= | {0}}" FontSize="20"></TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">
                            <TextBlock Text="{Binding SalesForYear}" FontSize="15"></TextBlock>
                            <TextBlock Text=" продаж за год" FontSize="15"></TextBlock>
                        </StackPanel>
                        <TextBlock Text="{Binding Phone}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="15"></TextBlock>
                        <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal">
                            <TextBlock Text="Приоритетность:" FontSize="15"></TextBlock>
                            <TextBlock Text="{Binding Priority}" FontSize="15"></TextBlock>
                        </StackPanel>
                        <TextBlock Text="{Binding Discount,StringFormat={}{0}%}" Grid.Column="2" Grid.Row="0"
                                   HorizontalAlignment="Left" FontSize="30"></TextBlock>
                    </Grid>


                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button Content="Изменить приоритет на. ." Name="ChangePriorityBtn" Width="200" FontSize="15"
        Click="ChangePriorityBtn_Click"  Visibility="Hidden"></Button>

            <Button Content="Добавить агента" Name="AddAgentBtn" FontSize="15" Width="200" Margin="5, 0, 0, 0"
            Click="AddAgentBtn_Click"></Button>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="LeftDirButton" Content="&lt;" Width="20" Height="30" Click="LeftDirButton_Click"></Button>
            <ListBox FontSize="20" Name="PageListBox" Width="245" Height="30" SelectionChanged="PageListBox_SelectionChanged_1" MouseUp="PageListBox_MouseUp">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <Button Name="RightDirButton" Content="&gt;" Width="20" Height="30" Click="RightDirButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
